{# Carrousel contenant la liste des films #}
<h1 class="text-center">
	La présentation de tout nos films</h1>
<div class="container   ">


	<div id="carouselExampleAutoplaying" class="carousel slide " data-bs-ride="carousel">
		<div class="carousel-inner justify-content-around  ">
			<div class="container row">
				{% if movies is empty %}
					<div>Aucun film ne correspond à votre recherche</div>
				{% else %}
					{% for item in movies %}
						<div class="carousel-item grid {{ loop.first ?  'active' : '' }}  " data-bs-interval="4000">
							<div class="container d-flex justify-content-around ">
								<div class="container">
									<img src="{{item.getPoster}}" class="col-5 w-20 p-3 mb-5 shadow  rounded " alt="poster de film">
								</div>
								<div class="col-md-4 ms-auto">
									<h3>
										{{item.getMovieId}}-
										{{item.getTitle}}</h3>
									<p>
										Réalisé en
										{{item.getYear}}
										par
										{{item.getDirector}}
										avec
										{% for roles in item.getRoles %}
											<p>
											{{roles.getActor.getSurname}}
											{{roles.getActor.getName}}
											dans le rôle de
											{{roles.getCharacter}}
											</p>
										{% endfor %}
									</p>
								</p>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endif %}
		</div>

	</div>
</div></div>
